---
import GitHub from "../icons/GitHub.astro";

export interface Props {
  name: string;
  description: string;
  url: string;
  highlights: string[];
  isActive: boolean;
}

const { url, description, highlights, name, isActive } = Astro.props;
---

<article class="p-1">
  <header>
    <h2 class="text-xl">
      <a href={`proyectos/${name}`} title={`Ver el proyecto ${name}`}>
        {name}
      </a>
      {isActive && <span class="text-green-500">•</span>}
      {
        url && (
          <a
            class="github-code-link"
            href={url}
            title={`Ver código fuente del proyecto ${name}`}
          >
            <GitHub />
          </a>
        )
      }
    </h2>
    <p class="text-gray-800">{description}</p>
  </header>
  <footer class="mt-4">
    {
      Array.isArray(highlights) &&
        highlights.map((highlight: string) => {
          return (
            <span class="inline-block bg-gray-200 text-gray-700 rounded-full px-1 text-sm font-semibold mr-2">
              {highlight}
            </span>
          );
        })
    }
  </footer>
</article>

<style>

  a {
    transition:
      color 0.2s ease,
      transform 0.3s ease;
    transform: scale(1);
  }

  a:hover {
    color: #ffffff;
    transform: scale(1.05);
  }
  h2 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .github-code-link {
    display: flex;
    align-items: center;
    color: var(--color-text);
  }
</style>
