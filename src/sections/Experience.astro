---
import { work } from "../../cv.json"
---
<div class="mt-2">
  <h1>Experiencias</h1>
  <ul>
    {
      work.map(
        ({ name, startDate, endDate, position, summary, highlights, url }) => {
          const startYear = new Date(startDate).getFullYear()
          const endYear =
            endDate != null ? new Date(endDate).getFullYear() : "Actual"
          const years = `${startYear} - ${endYear}`

          return (
            <li class="shadow">
              <article class="p-1">
                <header >
                  <div>
                    <h2 >
                      <a href={url} title={`Ver ${name}`} target="_blank" >
                        {name}
                      </a>
                    </h2>
                    <h3 >{position}</h3>
                  </div>

                  <time >{years}</time>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</div>

<style>
  h1{
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
    color:black;
  }
  article {
    border-bottom: 1px solid #000000;
  }
  ul {
    display: flex;
    flex-direction: column;
  }

  article h2 {
    font-weight: 500;
    color: #111;
  }

  a {
    color: #444;
    transition: color 0.2s ease, transform 0.3s ease;
  }

  article a {
    transition:
      color 0.2s ease,
      transform 0.3s ease;
    transform: scale(1);
  }

  article a:hover {
    color: #ffffff;
    transform: scale(1.05);
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #ffffff;
    font-size: 0.85rem;
    min-width: 102px;
  }
  

  @media (max-width: 700px) {
    header {
      flex-direction: column;
      align-items: baseline;
    }

    time {
      margin-top: 8px;
      text-align: left;
    }
  }
</style>
