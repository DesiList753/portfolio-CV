---
import { education } from "../../cv.json"
---

<div class="mt-2">
  <h1>Educaci√≥n</h1>
  <ul class="mb-10">
    {
      education.map(({ institution, startDate, endDate, area ,url}) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Actual"
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3><a href={url} target="_blank">{institution}</a></h3>
                </div>

                <time>{years}</time>
              </header>
              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</div>

<style>
  h1{
    margin-bottom: 16px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 2rem;
    color: #333;
  }
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article {
    border-bottom: 1px solid #ddd;
  }

  article h3 {
    font-weight: 500;
    color: #333;
    font-size: 1.25rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  footer p {
    color: #666;
    font-size: 1rem;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
